{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach wallet-verifier (local)",
      "port": 9259,
      "restart": true,
      "cwd": "${workspaceFolder}/wallet-verifier",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/wallet-verifier/dist/**/*.js"
      ],
      "sourceMapPathOverrides": {
        "/app/dist/*": "${workspaceFolder}/wallet-verifier/*"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach wallet-issuer (local)",
      "port": 9260,
      "restart": true,
      "cwd": "${workspaceFolder}/wallet-issuer",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/wallet-issuer/dist/**/*.js"
      ],
      "sourceMapPathOverrides": {
        "/app/dist/*": "${workspaceFolder}/wallet-issuer/*"
      }
    }
  ]
}
